{
  "name": "ofa-personal-life-os",
  "version": "1.0.0",
  "description": "OFA - Your Personal Life Operating System",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "node server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "db:init": "node server/db/init.js",
    "db:seed": "node server/db/seed.js",
    "db:reset": "node server/db/reset.js",
    "db:migrate": "node server/db/migrate.js",
    "db:install-pgvector": "node server/db/migrate_pgvector.js",
    "db:migrate-projects": "node server/db/migrate_projects.js",
    "knowledge:embed": "node server/jobs/knowledge_embeddings.js",
    "db:fix-intentions": "node server/db/remove_intention_constraint.js",
    "knowledge:seed": "node server/db/seed_knowledge.js",
    "knowledge:demo": "node server/jobs/knowledge_demo.js",
    "knowledge:insights": "node server/jobs/generate_insights.js",
    "db:seed-comprehensive": "node server/db/seed_comprehensive.js",
    "db:seed-stress": "node server/db/seed_stress_test.js",
    "db:migrate-google-oauth": "node server/db/migrate_google_oauth.js",
    "db:migrate-organizations": "node server/db/migrate_organizations.js",
    "db:migrate-workspace-code": "node server/db/migrate_workspace_code.js",
    "db:migrate-calendar": "node server/db/migrate_calendar.js",
    "db:migrate-tasks-time": "node -e \"import('./server/db/config.js').then(async ({query}) => { const fs = await import('fs'); const sql = fs.readFileSync('server/db/migrate_tasks_time_tracking.sql', 'utf8'); await query(sql); console.log('✅ Time tracking columns added'); process.exit(0); }).catch(e => { console.error('❌ Error:', e.message); process.exit(1); })\"",
    "db:migrate-subscriptions": "node server/db/migrate_subscriptions.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@huggingface/inference": "^4.13.5",
    "@supabase/supabase-js": "^2.90.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "connect-pg-simple": "^9.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "framer-motion": "^12.33.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "openai": "^6.16.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pdfjs-dist": "^5.4.530",
    "pg": "^8.11.3",
    "razorpay": "^2.9.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^10.3.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "playwright": "^1.58.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0"
  }
